[user]
    name = Tom Dalling
    email = "tom"@"tomdalling"."com"
[alias]
    s = status -uall -s -b --ignore-submodules=dirty
    co = checkout
    a = add
    aa = !git add -A . && git s
    aac = !git add -A . && git commit
    c = commit
    ca = commit --amend
    d = diff --ignore-submodules=dirty
    dc = diff --cached
    f = fetch
    fr = !git fetch && git rebase
    from = !git fetch origin master && git rebase origin/master
    ri = rebase -i
    riom = rebase -i origin/master
    p = push
    pf = push --force-with-lease
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    fixws = !"\
        if (! git diff-files --quiet .) && \
           (! git diff-index --quiet --cached HEAD) ; then \
            git commit -m FIXWS_SAVE_INDEX && \
            git stash save FIXWS_SAVE_TREE && \
            git rebase --whitespace=fix HEAD~ && \
            git reset --soft HEAD~ && \
            git stash pop ; \
        elif (! git diff-index --quiet --cached HEAD) ; then \
            git commit -m FIXWS_SAVE_INDEX && \
            git rebase --whitespace=fix HEAD~ && \
            git reset --soft HEAD~ ; \
        fi"
[core]
    excludesfile = ~/config/gitignore_global
    pager = less --chop-long-lines
[color]
    ui = true
[branch]
    autosetuprebase = always
[push]
    default = current
    followTags = true
[checkout]
    defaultRemote = origin
[commit]
    verbose = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[merge]
	tool = opendiff
